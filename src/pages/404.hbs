{{#extend "layout"}}
{{#content "main"}}

<section class="error-page">
    <div class="container">
        <div class="error-page__inner">
            <h1 class="visually-hidden">{{title}}</h1>
            <img class="lazyload error-page__bg" src="img/content-icons/404.svg" alt="404">
            <img class="lazyload error-page__code" src="img/404.svg" alt="404">
            <div class="error-page__text">
                <h1 class="error-page__title">Упс! Что-то пошло не так...</h1>
                <span class="error-page__subtitle">Такая страница не найдена</span>
                <a class="blue-btn" href="./index.html">На главную страницу</a>
            </div>
        </div>
    </div>
</section>

{{/content}}
{{/extend}}