<header class="header">
    <div class="container">
        <div class="header__inner">
            <div class="header__group">
                {{>logo}}
                <button class="header__select-city" type="button" title="Выбрать город" data-hystmodal="#city">
                    <svg><use xlink:href="#location"></svg>
                    <span class="header__selected-city">Москва</span>
                </button>
                <button class="header__open-menu" type="button" title="Меню">
                    <svg><use xlink:href="#burger"></svg>
                </button>
            </div>
            <div class="header__group">
                <a class="header__link header__link--calculator" href="./calculator.html">
                    <svg><use xlink:href="#calculator"></svg>
                    <span class="header__link-text">Калькулятор</span>
                </a>
                <a class="header__link header__link--whatsapp" href="https://api.whatsapp.com/send?phone=88005512208" title="WhatsApp">
                    <svg><use xlink:href="#whatsapp"></svg>
                    <span class="header__link-text">Чат 24/7</span>
                </a>
                <a class="header__link header__link--phone" href="tel:88005512208" title="Позвонить">
                    <svg><use xlink:href="#phone"></svg>
                    <span class="header__link-text">8 800 551 22 08</span>
                </a>
                <button class="button header__order-button" type="button" data-hystmodal="#order">Заказать звонок</button>
            </div>
        </div>
    </div>
</header>